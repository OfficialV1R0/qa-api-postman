{
  "info": {
    "name": "Reqres QA",
    "_postman_id": "reqres-qa",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET users",
      "request": { "method": "GET", "url": "{{baseUrl}}/users?page=2" },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () { pm.expect(pm.response.code).to.eql(200); });",
              "const json = pm.response.json();",
              "pm.test('Has data array', function () { pm.expect(Array.isArray(json.data)).to.be.true; });",
              "pm.test('At least 1 user', function () { pm.expect(json.data.length).to.be.above(0); });",
              "pm.test('JSON header', function () { pm.expect(pm.response.headers.get('Content-Type')).to.contain('application/json'); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST register success",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"email\": \"{{email}}\", \"password\": \"{{password}}\" }" },
        "url": "{{baseUrl}}/register"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () { pm.expect(pm.response.code).to.eql(200); });",
              "const j = pm.response.json();",
              "pm.test('Returns id', function () { pm.expect(j.id).to.exist; });",
              "pm.test('Returns token', function () { pm.expect(j.token).to.exist; });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST register failure (missing password)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"email\": \"{{email}}\" }" },
        "url": "{{baseUrl}}/register"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 400', function () { pm.expect(pm.response.code).to.eql(400); });",
              "pm.test('Error message present', function () { pm.expect(pm.response.json().error).to.exist; });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "PATCH user",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"name\": \"veronika\" }" },
        "url": "{{baseUrl}}/users/{{userId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () { pm.expect(pm.response.code).to.eql(200); });",
              "pm.test('updatedAt present', function () { pm.expect(pm.response.json().updatedAt).to.exist; });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "DELETE user",
      "request": { "method": "DELETE", "url": "{{baseUrl}}/users/{{userId}}" },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 204', function () { pm.expect(pm.response.code).to.eql(204); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
