{
  "info": {
    "name": "Reqres QA",
    "_postman_id": "reqres-qa",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET users",
      "request": { "method": "GET", "url": "{{baseUrl}}/users?page=2" },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200 or 401', function () { pm.expect([200,401]).to.include(pm.response.code); });",
              "const _ct = pm.response.headers.get('Content-Type') || '';",
              "const _isJson = _ct.includes('application/json');",
              "pm.test('Content-Type application/json (when 200 or 401)', function () {",
              "  if ([200,401].includes(pm.response.code)) { pm.expect(_ct).to.contain('application/json'); }",
              "  else { pm.expect(true, 'Skipped on other status').to.be.true; }",
              "});",
              "pm.test('Has data array', function () {",
              "  if (pm.response.code === 200 && _isJson) {",
              "    const json = pm.response.json();",
              "    pm.expect(Array.isArray(json.data)).to.be.true;",
              "  } else { pm.expect(true, 'Skipped on non-200/non-JSON').to.be.true; }",
              "});",
              "pm.test('At least 1 user', function () {",
              "  if (pm.response.code === 200 && _isJson) {",
              "    const json = pm.response.json();",
              "    pm.expect(json.data.length).to.be.above(0);",
              "  } else { pm.expect(true, 'Skipped on non-200/non-JSON').to.be.true; }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST register success",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-api-key", "value": "{{apiKey}}" }
        ],
        "body": { "mode": "raw", "raw": "{ \"email\": \"{{email}}\", \"password\": \"{{password}}\" }" },
        "url": "{{baseUrl}}/register"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200 or 401', function () { pm.expect([200,401]).to.include(pm.response.code); });",
              "pm.test('Returns id', function () {",
              "  if (pm.response.code === 200) { pm.expect(pm.response.json().id).to.exist; }",
              "  else { pm.expect(true, 'Skipped id check on non-200').to.be.true; }",
              "});",
              "pm.test('Returns token', function () {",
              "  if (pm.response.code === 200) { pm.expect(pm.response.json().token).to.exist; }",
              "  else { pm.expect(true, 'Skipped token check on non-200').to.be.true; }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST register failure (missing password)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-api-key", "value": "{{apiKey}}" }
        ],
        "body": { "mode": "raw", "raw": "{ \"email\": \"{{email}}\" }" },
        "url": "{{baseUrl}}/register"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 400 or 401', function () { pm.expect([400,401]).to.include(pm.response.code); });",
              "pm.test('Error message present', function () {",
              "  if (pm.response.code === 400 || pm.response.code === 401) { pm.expect(pm.response.json().error).to.exist; }",
              "  else { pm.expect(true, 'Skipped error check on non-400').to.be.true; }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "PATCH user",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-api-key", "value": "{{apiKey}}" }
        ],
        "body": { "mode": "raw", "raw": "{ \"name\": \"veronika\" }" },
        "url": "{{baseUrl}}/users/{{userId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200 or 401', function () { pm.expect([200,401]).to.include(pm.response.code); });",
              "const _ct = pm.response.headers.get('Content-Type') || '';",
              "const _isJson = _ct.includes('application/json');",
              "let _data = {};",
              "try { _data = _isJson ? pm.response.json() : {}; } catch(e) { _data = {}; }",
              "pm.test('updatedAt present (if expected)', function () {",
              "  if (pm.response.code === 200) {",
              "    pm.expect(_data.updatedAt, 'updatedAt field missing').to.exist;",
              "  } else if (pm.response.code === 401) {",
              "    pm.expect(_data.error || 'Missing API key').to.exist;",
              "  }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "DELETE user",
      "request": { "method": "DELETE", "header": [{"key": "x-api-key", "value": "{{apiKey}}"}], "url": "{{baseUrl}}/users/{{userId}}" },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 204 or 401', function () { pm.expect([204, 401]).to.include(pm.response.code); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "GET user by id",
      "request": { "method": "GET", "url": "{{baseUrl}}/users/{{userId}}" },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200 or 401', function () { pm.expect([200,401]).to.include(pm.response.code); });",
              "const _ct = pm.response.headers.get('Content-Type') || '';",
              "const _isJson = _ct.includes('application/json');",
              "pm.test('Content-Type application/json (when 200)', function () {",
              "  if (pm.response.code === 200) { pm.expect(_ct).to.contain('application/json'); }",
              "  else { pm.expect(true, 'Skipped on non-200').to.be.true; }",
              "});",
              "pm.test('Has user object when 200', function () {",
              "  if (pm.response.code === 200 && _isJson) {",
              "    const j = pm.response.json();",
              "    pm.expect(j.data, 'data object').to.exist;",
              "    pm.expect(j.data.id).to.eql(Number(pm.environment.get('userId')));",
              "  } else { pm.expect(true, 'Skipped on non-200').to.be.true; }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST login failure (missing password)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-api-key", "value": "{{apiKey}}" }
        ],
        "body": { "mode": "raw", "raw": "{ \"email\": \"{{email}}\" }" },
        "url": "{{baseUrl}}/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 400 or 401', function () { pm.expect([400,401]).to.include(pm.response.code); });",
              "pm.test('Error present', function () { pm.expect(pm.response.json().error).to.exist; });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
